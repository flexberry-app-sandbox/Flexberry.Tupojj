<h3 class="ui header">{{t "forms.i-i-s-tupojj-здание-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.nomer
      class=(if (v-get validationModel "nomer" "isInvalid") "error")
      label=(t "forms.i-i-s-tupojj-здание-e.nomer-caption")
      data-test-i-i-s-tupojj-здание-e-nomer=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "nomer" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.этаж
      class=(if (v-get validationModel "этаж" "isInvalid") "error")
      label=(t "forms.i-i-s-tupojj-здание-e.этаж-caption")
      data-test-i-i-s-tupojj-здание-e-этаж=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "этаж" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-tupojj-здание-e.город-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.город
      displayAttributeName="name"
      autocomplete=true
      relationName="город"
      projection="ГородL"
      title=(t "forms.i-i-s-tupojj-здание-e.город-caption")
      readonly=readonly
      componentName="городLookup"
      class=(if (v-get validationModel "город" "isInvalid") "error")
      data-test-i-i-s-tupojj-здание-e-город=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "город" "message")}}
  </div>
</form>
